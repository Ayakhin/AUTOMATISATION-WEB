{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "types": ["cypress"],
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "cypress/**/*.ts",
    "cypress/cypress.d.ts" // Assurez-vous que ce fichier est bien inclus
  ],
  "exclude": [
    "node_modules",
    "cypress/videos",
    "cypress/screenshots"
  ]
}
